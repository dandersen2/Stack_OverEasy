<div class="question-data">
  <div id="question-<%= @question.id %>" class='question'>
    <div class="question-up-vote">
      <%= link_to image_tag("http://i.imgur.com/nFn8U6a.png", class: 'up-arrow'), question_votes_path(@question) %>
    </div>
    <div class='question-vote-count'><%=@question.vote_count%></div>
    <div class="question-down-vote">
      <%= link_to image_tag("http://www.clker.com/cliparts/d/A/H/R/z/3/red-down-arrow-hi.png", class: 'down-arrow'), question_votes_path(@question) %>
    </div>
    <h1><%= @question.title %>
    <h3><%= @question.questioner.username %></h3>
    <p><%= @question.content %><p>
  </div>
  <div class="question-comments">
    <ul>
      <%@question_comments.each do |question_comment| %>
        <%= render partial: 'comments/comment', locals: {comment: question_comment} %>
      <% end %>
    </ul>
    <div><%=link_to 'comment on this question', new_question_comment_path(@question)%></div>
  </div>
</div>

<div class="answer-data">
  <h1>Answers</h1>
    <ul>
      <%@answers.each do |answer| %>
        <%= render partial: 'answers/answer', locals: {answer: answer, answer_comments: @answer_comments} %>
        <li><%=link_to 'comment on this answer', new_answer_comment_path(answer)%></li>
      <% end %>
    </ul>
  </div>
</div>

<div id='answer-form'>
  <%= render partial: 'answers/form', locals: {question: @question, answer: @answer} %>
</div>
